<UserControl x:Class="Labb3_NET22.QuizEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_NET22"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid Background="#E6C795">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="2" x:Name="BackButton"
                Content="Till huvudmenyn" Width="100" Margin="10"
                HorizontalAlignment="Right"
                Click="BackButton_Click"/>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="Redigera Quiz" VerticalAlignment="Center"
                   Foreground="#8A72D1" FontSize="32" Margin="10"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="Frågor i quizet" FontSize="20" Margin="10" Foreground="#8A72D1"/>
                    <ListBox x:Name="QuestList" DisplayMemberPath="Statement" Height="250" SelectionChanged="QuestList_SelectionChanged" Margin="10"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                <TextBlock Text="Quiz Titel" FontSize="20" Margin="5" Foreground="#8A72D1"/>
                <TextBox x:Name="TitleBox" TextWrapping="Wrap"/>

                <TextBlock Text="Fråga" Foreground="#8A72D1" FontSize="15" Margin="2,5"/>
                <TextBox x:Name="QuestionBox" TextWrapping="Wrap" MinHeight="15"/>

                <TextBlock Text="Svar 1" FontSize="15" Margin="2,5" Foreground="#8A72D1"/>
                <TextBox x:Name="Answer1Box" MinHeight="15" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Svar 2" FontSize="15" Margin="2,5" Foreground="#8A72D1"/>
                <TextBox x:Name="Answer2Box" MinHeight="15" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Svar 3" FontSize="15" Margin="2,5" Foreground="#8A72D1"/>
                <TextBox x:Name="Answer3Box" MinHeight="15" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Svar 4" FontSize="15" Margin="2,5" Foreground="#8A72D1"/>
                <TextBox x:Name="Answer4Box" MinHeight="15" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Margin="5" Orientation="Horizontal">
            <TextBlock Text="Rätt svar" FontSize="15" Foreground="#8A72D1" Margin="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="CorrectAnswer" MinWidth="40" Margin="5">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
            </ComboBox>

            <Button Margin="10, 5, 5, 5" x:Name="SaveButton" Click="SaveButton_Click" Content="Spara Quiz" HorizontalAlignment="Stretch"/>

            <Button Margin="10, 5, 5, 5" x:Name="DeletButton" Click="DeletButton_Click" Content="Radera Fråga" HorizontalAlignment="Stretch"/>

        </StackPanel>
        
    </Grid>
</UserControl>
