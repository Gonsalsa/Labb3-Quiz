<UserControl x:Class="Labb3_NET22.QuizCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_NET22"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid Background="#E6C795">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Skapa ett Quiz"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#8A72D1"
                   FontSize="40"
                   FontStyle="Italic"/>

        <Button Content="Till Huvudmenyn"
                x:Name="Back_Button"
                Click="Back_Button_Click"
                HorizontalAlignment="Right"
                Margin="10"/>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Vertical" Margin="10">
            <TextBlock Text="Titel" Margin="5" HorizontalAlignment="Center" Foreground="#8A72D1" FontStyle="Italic" FontSize="15"/>
            <TextBox x:Name="TitleBox" TextWrapping="Wrap" Background="White" MinHeight="10"/>

            <TextBlock Text="Fråga" Margin="5" HorizontalAlignment="Center" Foreground="#8A72D1" FontStyle="Italic" FontSize="15"/>
            <TextBox x:Name="QuestionBox" TextWrapping="Wrap" Background="White" MinHeight="10"/>

            <TextBlock Text="Svar 1" Margin="5" HorizontalAlignment="Center" Foreground="#8A72D1" FontStyle="Italic" FontSize="15"/>
            <TextBox x:Name="Answer1Box" TextWrapping="Wrap" Background="White" MinHeight="10"/>

            <TextBlock Text="Svar 2" Margin="5" HorizontalAlignment="Center" Foreground="#8A72D1" FontStyle="Italic" FontSize="15"/>
            <TextBox x:Name="Answer2Box" TextWrapping="Wrap" Background="White" MinHeight="10"/>

            <TextBlock Text="Svar 3" Margin="5" HorizontalAlignment="Center" Foreground="#8A72D1" FontStyle="Italic" FontSize="15"/>
            <TextBox x:Name="Answer3Box" TextWrapping="Wrap" Background="White" MinHeight="10"/>

            <TextBlock Text="Svar 4" Margin="5" HorizontalAlignment="Center" Foreground="#8A72D1" FontStyle="Italic" FontSize="15"/>
            <TextBox x:Name="Answer4Box" TextWrapping="Wrap" Background="White" MinHeight="10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0, 10, 0, 0" HorizontalAlignment="Center">
            <TextBlock Text="Rätt svar" Foreground="#8A72D1" Margin="10,0,0,0" VerticalAlignment="Center" FontStyle="Italic"/>

            <ComboBox x:Name="CorrectAnswerBox" MinWidth="10" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
            </ComboBox>

            <Button x:Name="AddQuestionButton" Content="Ny fråga" Margin="0,0,10,0" Click="AddQuestionButton_Click"/>
            <Button x:Name="SaveQuizButton" Content="Spara Quiz" Margin="0,0,10,0" Click="SaveQuizButton_Click"/>

        </StackPanel>
        
    </Grid>
</UserControl>
